<%= simple_form_for [restaurant, review] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, label: "Content", placeholder: "Write your review here...", input_html: { rows: 5 }, as: :text %>
    <%= f.input :rating, as: :select, collection: 0..5, prompt: 'Select a rating', label: "Rating" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
