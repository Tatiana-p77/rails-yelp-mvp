<h1 class="text-center"> Add a new restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name, label: "Name" %>
  <%= f.input :address, label: "Address" %>
  <%= f.input :phone_number, label: "Phone number" %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.button :submit, "Add a new restaurant", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to restaurants list', restaurants_path, class: 'btn btn-secondary mt-3' %>

